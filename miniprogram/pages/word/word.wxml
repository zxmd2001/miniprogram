<!--miniprogram/pages/word/word.wxml-->
<view class="container" >
  <block >
    <text class="word-content">{{wordlist[idx].content}}</text>
    <view class="pron-container">
      <image class="pron-icon" src="/images/pron-icon.png"></image>
      <text class="word-pron" bindtap="read">{{wordlist[idx].english}}</text>
    </view>
    <text wx:if="{{showNot}}" class="word-definition">{{wordlist[idx].meaning}}</text>
    <view class="button-miss" catchtap="show">
      <text class="word-miss" catchtap="show">不认识</text>
    </view>
    <view class="button-next" catchtap="next">
      <text class="word-next" catchtap="next">下一个</text>
    </view>
  </block>
</view>
<view wx:for="{{wordlist}}">
<view >{{item.conception}}</view>
</view>